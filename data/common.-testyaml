---
ombi::manage_ppa: true
ombi::manage_user: true
ombi::manage_service_dirs: [true, '/home']
ombi::manage_data_dirs: [true, '/home/ombi']
ombi::manage_certs: true
ombi::manage_pass_file: true
ombi::user: 'ombi'
ombi::group: 'ombi'
ombi::service_dir: '/home/ombi'
ombi::config_file: '/etc/ombi.conf'
ombi::service_enable: true
ombi::service_ensure: true
ombi::main_dir: 'downloads'
ombi::destination_dir: 'dst'
ombi::intermediate_dir: 'inter'
ombi::nzb_dir: 'nzb'
ombi::queue_dir: 'queue'
ombi::temp_dir: 'tmp'
ombi::web_dir: '/usr/share/ombi/webui'
ombi::script_dir: ['scripts']
ombi::lock_file: 'ombi.lock'
ombi::log_file: 'dst/ombi.log'
ombi::config_template: '/usr/share/ombi/ombi.conf'
ombi::packages: ['unrar', 'par2', 'parchive']
ombi::managed_service_dirs: ["$service_dir", "$main_dir", "$script_dir"]
ombi::managed_data_dirs: [$intermediate_dir, $destination_dir, $nzb_dir, $queue_dir, $temp_dir]