##############################################################################
### SCHEDULER                                                              ###
<%- if !scope['::ombi::tasks'].nil? and scope['::ombi::tasks'].length > 0 -%>
    <%- scope['::ombi::tasks'].each_with_index do |task, i| -%>
        <%- task_num = i + 1 -%>

# Task: <%= task_num %>
Task<%= task_num %>.Time=<%= task['time'].join(',') if task['time'] %>
Task<%= task_num %>.WeekDays=<%= task['week_days'].join(',') if task['week_days'] %>
Task<%= task_num %>.Command=<%= task['command'].to_s %>
Task<%= task_num %>.Param=<%= task['param'].to_s %>
  <%- end -%>
<%- end -%>


